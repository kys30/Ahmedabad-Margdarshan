<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

   <item android:top="2dp" android:bottom="2dp"> 
      <shape 
        android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ffffcc" />
            <gradient
               android:startColor="#606"
               android:endColor="#000000"
               android:angle="270" 
                ></gradient>
            <padding
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                 />
        </shape>
   </item>

</layer-list>
